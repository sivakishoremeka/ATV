<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/f_my_pkgs_pkg_name_h"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/package_name"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/f_my_pkgs_actvtd_on_h"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/actvtd_on"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/f_my_pkgs_valid_till_h"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/valid_till"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/f_my_pkgs_btn_renewel"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_weight="1"
            android:text="Renewel"
            android:textSize="13sp"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:id="@+id/f_my_profile_hr_line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#C3C1C2" />

    <LinearLayout
        android:id="@+id/f_my_pkgs_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:orientation="vertical">
    </LinearLayout>

</LinearLayout>