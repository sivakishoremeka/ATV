<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <View
        android:id="@+id/a_ch_iv_lf_line"
        android:layout_width="2dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:background="#FF7c00" />

    <View
        android:id="@+id/a_ch_iv_rgt_line"
        android:layout_width="2dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="#FF7c00" />

    <View
        android:id="@+id/a_ch_iv_btm_line"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="#FF7c00" />

    <TextView
        android:id="@+id/a_ch_tv_channels"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#FF7c00"
        android:gravity="center"
        android:text="Channels"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:textStyle="bold" />
    <GridView
        android:id="@+id/a_gv_channels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/a_ch_iv_btm_line"
        android:layout_below="@+id/a_ch_tv_channels"
        android:layout_toLeftOf="@+id/a_ch_iv_rgt_line"
        android:layout_toRightOf="@+id/a_ch_iv_lf_line"
        android:numColumns="4">
    </GridView>
</RelativeLayout>